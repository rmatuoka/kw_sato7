function check_text_onfocus(obj)
{
    if(obj.value == obj.defaultValue)
        obj.value = '';
}
function check_text_onblur(obj)
{
    if(obj.value=='')
        obj.value = obj.defaultValue;
}
function insertingmask()
{
	$('input[name="contact[phone]"]').setMask('(99)9999-9999');		
}

function valida(){
	//jQuery("#Box_registration").hide();
