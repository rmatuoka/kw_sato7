<% title "Admin/Contacts" %>

<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Message</th>
  </tr>
  <% for contact in @contacts %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.phone %></td>
      <td><%= contact.email %></td>
      <td><%= contact.message %></td>
      <td><%= link_to "Show", [:admin, contact] %></td>
      <td><%= link_to "Edit", edit_admin_contact_path(contact) %></td>
      <td><%= link_to "Destroy", [:admin, contact], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Admin/Contact", new_admin_contact_path %></p>
